<div class="col-md-3"></div>
<div class="col-md-6">
  <h1 style="text-align:center">Top SJW Hunters</h1><br>
  <table class="table">
  <thead>
    <tr>
      <td>Watchdog</td>
      <td>Nominations</td>
      <td>Warriors Confirmed</td>
    </tr>
  </thead>
  <tbody>
    <% @nominators.each do |nominator| %>
    <tr>
      <td><%= image_tag nominator.avatar, class: 'img img-thumbnail', style: 'max-width: 40px' %>
          <%= link_to nominator.on_twitter, "https://twitter.com/#{nominator.handle}", target: '_blank' %>
      </td>
      <td><%= nominator.nominations %></td>
      <td><%= nominator.warriors_confirmed %></td>
    </tr>
    <% end %>
  </tbody>
  </table>
</div>
